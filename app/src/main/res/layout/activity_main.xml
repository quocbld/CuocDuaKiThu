<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/backg"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBox
        android:id="@+id/checkbox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"/>
    <CheckBox
        android:id="@+id/checkbox2"
        android:layout_marginBottom="15dp"
        android:layout_above="@id/checkbox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <CheckBox
        android:id="@+id/checkbox1"
        android:layout_marginBottom="15dp"
        android:layout_above="@id/checkbox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <SeekBar
        android:thumb="@drawable/vit"
        android:progressDrawable="@android:color/transparent"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/checkbox3"
        android:id="@+id/seekbar3"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>
    <SeekBar
        android:thumb="@drawable/sutu"
        android:progressDrawable="@android:color/transparent"
        android:layout_marginBottom="15dp"
         android:layout_above="@id/seekbar3"
        android:layout_toRightOf="@id/checkbox2"
        android:id="@+id/seekbar2"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>

    <SeekBar
        android:id="@+id/seekbar1"
        android:progressDrawable="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_above="@id/seekbar2"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@id/checkbox1"
        android:thumb="@drawable/ech1" />
    <ImageView
        android:id="@+id/im1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo"
        android:layout_width="150dp"
        android:layout_height="120dp"/>
    <TextView
        android:id="@+id/name"
        android:layout_below="@id/im1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="Lê Bá Quốc - 2050531200260"
        android:textColorHint="#ff00"/>
    <TextView
        android:id="@+id/textviewDiem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textSize="50sp"
        android:layout_margin="10dp"
        android:textColor="#ff00"
        android:textStyle="bold"/>
    <ImageButton
        android:layout_below="@id/name"
        android:id="@+id/buttonPlay"
        android:src="@drawable/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_centerInParent="true"/>



</RelativeLayout>